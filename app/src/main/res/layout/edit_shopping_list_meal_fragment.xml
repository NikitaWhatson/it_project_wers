<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintWidth_max="500dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        android:paddingTop="95dp"
        android:paddingBottom="95dp"
        android:clipToPadding="false"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/choice_meal_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Выберите продукт"
                android:textColor="@color/green_700"
                android:textFontWeight="500"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <Spinner
                android:id="@+id/auto_complete_meal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="16dp"
                android:entries="@array/meals"
                android:spinnerMode="dropdown"
                app:layout_constraintTop_toBottomOf="@id/choice_meal_label" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/meal_photo"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:padding="16dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/auto_complete_meal"
                app:shapeAppearance="@style/ShapeAppearance.MaterialComponents.MediumComponent"
                tools:src="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/in_stock_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="В наличии"
                android:textColor="@color/green_500"
                android:textFontWeight="500"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/meal_photo" />

            <ImageView
                android:id="@+id/fridge_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/in_stock_label"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/ic_fridge_green"
                android:layout_margin="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/fridge_picture"
                app:layout_constraintTop_toTopOf="@id/fridge_picture"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/fridge_picture"
                tools:text="0.1кг"/>

            <TextView
                android:id="@+id/max_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Требуемое количество"
                android:textColor="@color/green_500"
                android:textFontWeight="500"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fridge_picture" />

            <com.google.android.material.slider.Slider
                android:id="@+id/amount_slider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:value="10"
                android:valueFrom="0"
                android:valueTo="100"
                app:layout_constraintEnd_toStartOf="@id/amount_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/max_amount"
                app:thumbColor="@color/orange_700" />

            <TextView
                android:id="@+id/amount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@id/amount_slider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/amount_slider"
                app:layout_constraintTop_toTopOf="@id/amount_slider"
                tools:text="0.5кг" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_margin="16dp"
                android:backgroundTint="@color/orange_700"
                android:text="Подтвердить"
                android:textAllCaps="false"
                android:textSize="16dp"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/amount_slider" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/bottom_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>