<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_to_shopping_list_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="48dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:text="+"
        android:textColor="@color/green_700"
        android:textSize="24sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/meal_name_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/green_700"
        app:strokeWidth="2dp" />
    <TextView
        android:id="@+id/meal_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/green_700"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/add_to_shopping_list_button"
        app:layout_constraintTop_toTopOf="@id/add_to_shopping_list_button"
        app:layout_constraintBottom_toBottomOf="@id/add_to_shopping_list_button"
        tools:text="Кальмары" />
    <View
        android:id="@+id/dots"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/dotted"
        app:layout_constraintBottom_toBottomOf="@+id/meal_name_text"
        app:layout_constraintEnd_toStartOf="@+id/meal_amount_text"
        app:layout_constraintStart_toEndOf="@+id/meal_name_text" />
    <TextView
        android:id="@+id/meal_amount_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:textColor="@color/green_700"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="5 шт." />
</androidx.constraintlayout.widget.ConstraintLayout>