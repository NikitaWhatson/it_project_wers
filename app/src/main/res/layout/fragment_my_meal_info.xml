<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MyMealInfo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/edit_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Редактирование"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/meal_name_input_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/input_round_background"
                android:hint="Название блюда"
                android:paddingTop="4dp"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:errorEnabled="true"
                app:hintTextColor="#5F5935"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_label">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/meal_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/image_link_input_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/input_round_background"
                android:hint="Ссылка на изображение"
                android:paddingTop="4dp"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:errorEnabled="true"
                app:hintTextColor="#5F5935"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/meal_name_input_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/image_link_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

<!--            <androidx.cardview.widget.CardView-->
<!--                android:id="@+id/meal_image_card"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_margin="16dp"-->
<!--                app:cardCornerRadius="20dp"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toBottomOf="@id/image_link_input_layout">-->

<!--                <ImageView-->
<!--                    android:id="@+id/meal_image"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="200dp"-->
<!--                    android:scaleType="centerCrop"-->
<!--                    tools:src="@tools:sample/backgrounds/scenic" />-->
<!--            </androidx.cardview.widget.CardView>-->

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/full_time_input_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/input_round_background"
                android:hint="Время приготовления (мин.)"
                android:paddingTop="4dp"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:errorEnabled="true"
                app:hintTextColor="#5F5935"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_link_input_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/full_time_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/difficulty_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Сложность"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/full_time_input_layout"
                app:layout_constraintTop_toBottomOf="@id/full_time_input_layout" />

            <RadioGroup
                android:id="@+id/radio_group_difficult"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                app:layout_constraintEnd_toEndOf="@id/full_time_input_layout"
                app:layout_constraintStart_toStartOf="@id/full_time_input_layout"
                app:layout_constraintTop_toBottomOf="@id/difficulty_label">

                <RadioButton
                    android:id="@+id/easy_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Лёгкая" />

                <RadioButton
                    android:id="@+id/middle_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Средняя" />

                <RadioButton
                    android:id="@+id/hard_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Высокая" />
            </RadioGroup>

            <TextView
                android:id="@+id/ingredients_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Ингредиенты"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/radio_group_difficult"
                app:layout_constraintTop_toBottomOf="@id/radio_group_difficult" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ingredients_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/my_intruction_step_item"
                tools:itemCount="3"
                app:layout_constraintStart_toStartOf="@id/ingredients_label"
                app:layout_constraintTop_toBottomOf="@id/ingredients_label" />

            <Button
                android:id="@+id/add_ingredient_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="Добавить ингредиент"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/ingredients_list"
                app:layout_constraintTop_toBottomOf="@id/ingredients_list" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/calories_input_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/input_round_background"
                android:hint="Калории"
                android:paddingTop="4dp"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:errorEnabled="true"
                app:hintTextColor="#5F5935"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_ingredient_button">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/calories_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/proteins_input_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/input_round_background"
                android:hint="Белки"
                android:paddingTop="4dp"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:errorEnabled="true"
                app:hintTextColor="#5F5935"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/calories_input_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/proteins_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fats_input_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/input_round_background"
                android:hint="Жиры"
                android:paddingTop="4dp"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:errorEnabled="true"
                app:hintTextColor="#5F5935"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/proteins_input_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fats_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/carbohydrates_input_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/input_round_background"
                android:hint="Углеводы"
                android:paddingTop="4dp"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:errorEnabled="true"
                app:hintTextColor="#5F5935"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fats_input_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/carbohydrates_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/diets_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Диеты"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/full_time_input_layout"
                app:layout_constraintTop_toBottomOf="@id/carbohydrates_input_layout" />

            <CheckBox
                android:id="@+id/vegan_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/green_500"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/diets_label"
                app:layout_constraintStart_toStartOf="@id/diets_label"
                android:text="Вегетарианская" />

            <CheckBox
                android:id="@+id/sport_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/green_500"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/vegan_check_box"
                app:layout_constraintStart_toStartOf="@id/diets_label"
                android:text="Спортивная" />

            <TextView
                android:id="@+id/instruction_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Инструкция"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/diets_label"
                app:layout_constraintTop_toBottomOf="@id/sport_check_box" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/instructions_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/instruction_label"
                app:layout_constraintTop_toBottomOf="@id/instruction_label" />

            <Button
                android:id="@+id/add_instruction_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="Добавить шаг"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/instructions_list"
                app:layout_constraintTop_toBottomOf="@id/instructions_list" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/confirm_button"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/orange_700"
                android:text="Подтвердить"
                android:textAllCaps="false"
                android:textSize="16dp"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_instruction_button" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>