<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/meal_of_month_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Блюда месяца"
                android:textColor="@color/green_700"
                android:textFontWeight="500"
                android:textSize="26sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_of_month_meal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="@id/meal_of_month_label"
                app:layout_constraintTop_toBottomOf="@id/meal_of_month_label"
                app:spanCount="6"
                tools:itemCount="3"
                tools:listitem="@layout/meal_item" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/more_month_meals_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Показать ещё..."
                android:textFontWeight="600"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/list_of_month_meal"
                app:strokeColor="@color/green_700" />

            <TextView
                android:id="@+id/good_morning_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Для приятного утра"
                android:textColor="@color/green_700"
                android:textFontWeight="500"
                android:textSize="26sp"
                app:layout_constraintStart_toStartOf="@id/meal_of_month_label"
                app:layout_constraintTop_toBottomOf="@id/more_month_meals_button" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_of_morning_meal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="16dp"
                app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="@id/good_morning_label"
                app:layout_constraintTop_toBottomOf="@id/good_morning_label"
                app:spanCount="2"
                tools:itemCount="4"
                tools:listitem="@layout/meal_item" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>