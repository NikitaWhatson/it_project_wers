<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="customFontActionBar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/montserrat_alternates_bold</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="customActionBarStyle" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="customSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/green_500</item>
        <item name="android:editTextColor">@color/green_200</item>
        <item name="android:textColorHint">#A0606C38</item>
    </style>

    <style name="customButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/orange_500</item>
        <item name="tintMode">@color/white</item>
    </style>

    <style name="customFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/orange_500</item>
        <item name="shapeAppearanceOverlay">@style/customCorners</item>
    </style>

    <style name="customCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

</resources>